<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>O Esquimó - Climatização Profissional</title>
  <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
  <!-- Topo -->
  <header class="hero">
    <img src="assets/imagens/tecnico-trabalhando.jpg" alt="Técnico trabalhando" class="hero-img" loading="lazy">
    <div class="hero-text">
      <h1>O Esquimó Climatização</h1>
      <p>Soluções profissionais desde 2010</p>
    </div>
  </header>

  <!-- Serviços -->
  <section class="servicos">
    <h2>Nossos Serviços</h2>
    <div class="servicos-grid">
      <div class="servico-card" onclick="selecionarServico('Instalação')">
        <img src="assets/imagens/instalacao-ar.jpg" alt="Instalação profissional" loading="lazy">
        <h3>Instalação</h3>
      </div>
      <div class="servico-card" onclick="selecionarServico('Limpeza Split')">
        <img src="assets/imagens/limpeza-split.jpg" alt="Limpeza técnica" loading="lazy">
        <h3>Limpeza</h3>
      </div>
      <div class="servico-card" onclick="selecionarServico('Manutenção')">
        <img src="assets/imagens/manutencao-ar.jpg" alt="Manutenção especializada" loading="lazy">
        <h3>Manutenção</h3>
      </div>
    </div>
  </section>

  <!-- Formulário -->
  <div class="container" id="formulario">
    <h2>Solicite Seu Orçamento</h2>
    <form id="form-orcamento">
      <label for="nome">Nome Completo:</label>
      <input type="text" id="nome" required>

      <label for="endereco">Endereço Completo:</label>
      <input type="text" id="endereco" required>

      <label for="whatsapp">WhatsApp:</label>
      <input type="tel" id="whatsapp" placeholder="(00) 00000-0000" required>

      <label for="servico">Tipo de Serviço:</label>
      <select id="servico" required>
        <option value="">Selecione...</option>
        <option value="Instalação">Instalação</option>
        <option value="Limpeza Split">Limpeza Split</option>
        <option value="Manutenção">Manutenção</option>
      </select>

      <label for="btus">Capacidade em BTUs:</label>
      <select id="btus">
        <option value="">Selecione...</option>
        <option value="9000">9.000 BTUs</option>
        <option value="12000">12.000 BTUs</option>
        <option value="18000">18.000 BTUs</option>
      </select>

      <div id="relatorio"></div>

      <button type="button" id="enviarBtn" disabled>Enviar Orçamento</button>
    </form>
  </div>

  <script src="assets/js/script.js"></script>
</body>
</html>
